%h1 Shampoos#index
%p Find me in app/views/shampoos/index.html.haml

%p
  = link_to "New Shampoo", new_shampoo_path

-if logged_in?
  - @shampoos.each do |shampoo|
    .shampoos
      %p
        = image_tag shampoo.image.url, width: "500" if shampoo.image?
      %p
        Shampoo Name : 
        = link_to "#{shampoo.name}", shampoo_path(shampoo)
      %p
        Shampoo Storage : 
        = shampoo.storage
      %p
        Shampoo Price : 
        = shampoo.price

      .tag
        - @tags.each do |tag|
          - if tag.shampoo_id == shampoo.id
            %span #
            = tag.name 
            %span.user-id
              userID: 
              = tag.user_id

      = form_for (@tag) do |f|
        = render 'shared/error_messages', object: f.object

        = f.label :name
        = f.text_field :name

        = f.hidden_field :shampoo_id, value: shampoo.id

        = f.hidden_field :user_id, value: current_user.id


        = f.submit "Post taaaaag!"


  = paginate @shampoos