%h1 Sign up

= form_for(@user) do |f|
  = render 'shared/error_messages', object: f.object

  = f.label :name
  = f.text_field :name

  = f.label :email
  = f.email_field :email

  = f.label :password
  = f.password_field :password

  = f.label :password_confirmation, "Confirmation"
  = f.password_field :password_confirmation

  = f.label :age
  = f.number_field :age

  = f.label :gender
  = f.number_field :gender

  = f.submit "Create my account"